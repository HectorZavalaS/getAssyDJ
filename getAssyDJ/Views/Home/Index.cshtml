@{
    ViewBag.Title = "Home Page";
}

<div class="row window-title">
    <div class="container-shortages window-content" id="shortages_form">

        <div class="form-group" style="width:50%;float:left;">
            <p>Introduce los DJ groups separados por coma</p>
            <input autocomplete="off" autofocus class="form-control" id="djs" name="djs" placeholder="DJs separados por coma" type="text">
            <button class="btn btn-primary" id="shortages" style="margin-top:10px;">Consultar</button>
        </div>

        <div class="form-group" style="width:20%;float:right;">
            <div class="col-md-4 divcol" style="border-right-width:1px;">
                <div id="printM" class="row well" style="width:177px;">
                    <div class="radio radio-success radio-inline" style="vertical-align: unset;">
                        <input type="radio" id="selSMT" value="1" name="filter" checked="checked">
                        <label for="selSMT" id="lblOut" style="padding-left:0px;">SMT</label>
                    </div>
                    <div class="radio radio-success radio-inline" style="margin-right:15px;">
                        <input type="radio" id="selAssy" value="2" name="filter">
                        <label for="selAssy" style="padding-left:0px;">ASSY</label>
                    </div>
                </div>
            </div>
        </div>
        <div style="clear:both;"></div>
    </div>
    <div style="clear:both;"></div>
    <div id="wdw" class="window" style="margin-top:20px;display:none;">
        <div id="djsDtl" class="window-content"></div>
    </div>
</div>

@section scripts{
<script type="text/javascript">
    $(document).ready(function () {
        $("#shortages").click(function () {
            getAssyDjs();
        });
    });
</script>

}